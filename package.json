{
  "name": "@nish1896/eslint-config-root",
  "version": "2.1.4",
  "description": "eslint and stylistic rules to help you focus more on the code logic, while they take care of the code formatting",
  "author": "Nishant Kohli",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/**/*",
    "apps/*"
  ],
  "scripts": {
    "setup": "sh ./scripts/setup.sh",
    "pkgs": "sh ./scripts/pack.sh",
    "link-v8": "sh ./scripts/link-v8.sh",
    "link-v9": "sh ./scripts/link-v9.sh",
    "config:link": "yarn workspace @nish1896/eslint-config link:local",
    "flat-config:link": "yarn workspace @nish1896/eslint-flat-config link:local",
    "config:unlink": "npm unlink @nish1896/eslint-config",
    "flat-config:unlink": "npm unlink @nish1896/eslint-flat-config",
    "docs": "yarn workspace @nish1896/eslint-config-docs start",
    "docs:build": "yarn workspace @nish1896/eslint-config-docs build",
    "js-v8:lint": "yarn workspace js-v8 lint",
    "next-v14:lint": "yarn workspace next-v14 lint",
    "react-v18:lint": "yarn workspace react-v18 lint",
    "js-9:lint": "yarn workspace js-v9 lint",
    "next-v15-js:lint": "yarn workspace next-v15-js lint",
    "next-v15-ts:lint": "yarn workspace next-v15-ts lint",
    "react-v19:lint": "yarn workspace react-v19 lint",
    "vite:lint": "yarn workspace vite lint"
  },
  "devDependencies": {
    "rimraf": "^6.0.1"
  },
  "keywords": [
    "@nish1896",
    "@nish1896/eslint-config",
    "eslint",
    "eslintconfig",
    "eslint-config",
    "eslint-config-jsx",
    "eslint-config-react",
    "eslint-react",
    "lint-config",
    "lint-rules",
    "react-eslint"
  ],
  "homepage": "https://nish1896-eslint-config.vercel.app/",
  "repository": {
    "url": "git+https://github.com/nishkohli96/eslint-config.git"
  },
  "license": "MIT"
}
